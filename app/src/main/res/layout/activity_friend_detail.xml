<?xml version="1.0" encoding="utf-8"?>

<!--general application view-->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="10dp">

    <!--Friend Detail view-->
    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--on hold for now-->
        <!--<ImageView-->
            <!--android:id="@+id/picture"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/name"
            android:text="@string/friend_name"
            android:textSize="30sp"
            android:textColor="@color/colorBackground"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/instaHandle"
            android:text="@string/insta_handle"
            android:textColor="@color/colorBackground"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bio"
            android:text="@string/bio"
            android:textColor="@color/colorBackground"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/backFriendList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:layout_weight="1"
        android:text="@string/return_to_friends_list"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/backToMain"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:padding="15sp"
        android:layout_weight="1"
        android:text="@string/back_to_home"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/backFriendList"/>

</android.support.constraint.ConstraintLayout>